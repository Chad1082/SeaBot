<Application x:Class="SeaBotWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SeaBotWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <FontFamily x:Key="OpenSans-Bold">pack://application:,,,/Fonts/#OpenSans-Bold</FontFamily>
        <FontFamily x:Key="OpenSans-Light">pack://application:,,,/Fonts/#OpenSans-Light</FontFamily>
        <local:SmoothLinearGradientBrush x:Key="WindowBackgroundBrush" 
                                 From="AliceBlue" 
                                 To="Red" />
    </Application.Resources>
</Application>
